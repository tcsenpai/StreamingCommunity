#!/bin/bash

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"

# Navigate: MacOS → Contents → StreamingCommunity GUI.app → Project Root
PROJECT_ROOT="$(cd "$SCRIPT_DIR/../../.." && pwd)"

# GUI folder is inside the project root
GUI_DIR="$PROJECT_ROOT/GUI"

# Run the Python launcher (port 8462 is configured in launcher.py)
osascript <<EOF
tell application "Terminal"
    do script "cd '$GUI_DIR' && python3 launcher.py"
    set frontmost to true
end tell
EOF
